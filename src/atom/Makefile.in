# Makefile for src/atom

SHELL=/bin/sh

CC = @CC@
FPP = @FPP@
FPPFLAGS = @FPPFLAGS@
FC = @FC@
LD = @LD@
CFLAGS =  @CFLAGS@
FFLAGS = @F2C_H@ @FFLAGS@
RANLIB = @RANLIB@
LDFLAGS = @LDFLAGS@
AR = @AR@

fobjects = atm.o cubint.o difrel.o dsolv2.o etotal.o excorr.o ghostnl.o \
	hrtree.o interp.o logder.o nllogd.o pbe.o getpcc.o pratt.o radin.o \
	schsl.o scpot.o splift.o spliq.o velect.o

cobjects = do_ae.o do_nl.o do_tc.o

all_objects = $(fobjects) $(cobjects)

this_dir = atom

.f.o:
	$(FPP) $(FPPFLAGS) $< > $<.f
	$(FC) $(FFLAGS) $(OPTIONS) -c $<.f -o $@
	rm -f $<.f

all: $(all_objects)
	-rm -f objects
	for i in $(all_objects); do echo $(this_dir)/$$i >> objects; done

clean:
	rm -f $(fobjects) $(cobjects) libatom.a core* *~ *.f.f objects

distclean: clean
	rm -f Makefile


