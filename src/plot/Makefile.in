# Makefile for somthin'

SHELL=/bin/sh

CC = @CC@
CPP = @CPP@
FPP = @FPP@
FPPFLAGS = @FPPFLAGS@
FC = @FC@
LD = @LD@
CFLAGS = -I../FlexiLib -I../uniPPlib @CFLAGS@
FFLAGS = @FFLAGS@
RANLIB = @RANLIB@
AR = @AR@

SHELL=/bin/sh

cobjects =  do_plot.o do_pccplt.o do_logplt.o do_wplot.o do_vplot.o do_qplot.o 
fobjects = btrans.o

all_objects = $(fobjects) $(cobjects)

this_dir = plot

.f.o:
	$(FPP) $(FPPFLAGS) -I../atom $< > $<.f
	$(FC) $(FFLAGS) $(OPTIONS) -c $<.f -o $@
	rm -f $<.f

all: $(all_objects)
	-rm -f objects
	for i in $(all_objects); do echo $(this_dir)/$$i >> objects; done

clean:
	rm -f $(cobjects) $(fobjects)  *~ core* objects

distclean: clean
	rm -f Makefile
